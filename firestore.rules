rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all access by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Recipes collection - read-only access for public queries
    // Admin SDK has full access regardless of these rules
    match /recipes/{recipeId} {
      // Allow reading any recipe (cache hits are public)
      allow get: if request.auth != null || true;

      // Writing is only allowed via backend (Admin SDK)
      // Frontend should not write directly to Firestore
      allow create, update, delete: if false;
    }
  }
}
